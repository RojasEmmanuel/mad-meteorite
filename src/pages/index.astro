<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Conteo
    const counters = document.querySelectorAll('.count-up');
    const heroSection = document.querySelector('.hero-section');

    const startCounting = () => {
      counters.forEach(counter => {
        const target = parseInt((counter as HTMLElement).dataset.target || '0');
        let current = 0;
        const increment = target / 100;
        const timer = setInterval(() => {
          current += increment;
          if (current >= target) {
            counter.textContent = target + (counter.nextElementSibling?.textContent || '');
            clearInterval(timer);
          } else {
            counter.textContent = Math.floor(current).toString();
          }
        }, 20);
      });
    };

    const heroObserver = new IntersectionObserver(entries => {
      if (entries[0].isIntersecting) {
        startCounting();
        heroObserver.unobserve(entries[0].target);
      }
    }, { threshold: 0.5 });

    if (heroSection) heroObserver.observe(heroSection);

    // Filtros
    const filterBtns = document.querySelectorAll('[data-filter]');
    const cards = document.querySelectorAll('[data-category]');

    filterBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        const filter = (btn as HTMLElement).dataset.filter || 'all';
        filterBtns.forEach(b => {
          b.classList.toggle('bg-primary text-white shadow-xl -translate-y-1', b === btn);
          b.classList.toggle('bg-gray-200 text-gray-800 shadow-md', b !== btn);
        });

        cards.forEach(card => {
          const matches = filter === 'all' || (card as HTMLElement).dataset.category === filter;
          card.classList.toggle('hidden', !matches);
        });
      });
    });
  });
</script>