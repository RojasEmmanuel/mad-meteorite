---
// src/components/Layout.astro
export interface Props {
  title: string;
}


import WhatsAppButton from './WhatsAppButton.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | AMARE Inmobiliaria</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet" />
    
    <!-- Tailwind -->
    <script is:inline src="https://cdn.tailwindcss.com"></script>
    
    <!-- Configuración básica de Tailwind (colores personalizados) -->
    <script is:inline>
      tailwind.config = {
        theme: {
          extend: {
            colors: {
              primary: '#212F49',
              secondary: '#2C3E5A',
              accent: '#D8CCB2',
              dark: '#1A2433',
            },
            fontFamily: {
              sans: ['Montserrat', 'sans-serif'],
              opensans: ['Open Sans', 'sans-serif'],
            },
          },
        },
      }
    </script>
    
    <style>
      body { font-family: 'Montserrat', sans-serif; }
      .hero-overlay { background: linear-gradient(rgba(33,47,73,0.9), rgba(26,36,51,0.95)); }
      .btn-primary { @apply bg-accent text-primary font-semibold py-3 px-8 rounded-lg hover:bg-transparent hover:text-accent hover:border-accent border-2 transition; }
      .btn-secondary { @apply border-2 border-primary text-primary font-semibold py-3 px-8 rounded-lg hover:bg-primary hover:text-white transition; }
    </style>
  </head>
  <body class="bg-gray-100 text-gray-800">
    <slot name="navbar" />
    <main>
      <slot />
      <!-- En Layout.astro, al final (antes de </main> o en footer) -->
        <WhatsAppButton client:load />
    </main>
    <slot name="footer" />
  </body>
</html>