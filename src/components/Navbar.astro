---
// src/components/Navbar.astro
const navItems = [
  { href: "/", label: "Inicio" },
  { href: "/servicios", label: "Servicios" },
  { href: "/nosotros", label: "Nosotros" },
  { href: "/contacto", label: "Contacto" },
];

// Enlaces de redes sociales (cámbialos por los reales cuando los tengas)
const socialLinks = {
  facebook: "https://facebook.com/AmareInmobiliaria",
  instagram: "https://instagram.com/AmareTerrenos",
  tiktok: "https://tiktok.com/@Amare_Propiedades",
  whatsapp: "https://wa.me/529581737977"  // Número con código de país
};
---

<nav class="fixed top-0 w-full bg-gradient-to-r from-dark to-primary shadow-lg z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="logo">
      <a href="/" class="flex flex-col">
        <span class="text-3xl font-bold text-white">AMARE</span>
        <span class="text-sm text-accent tracking-wider">Inmobiliaria</span>
      </a>
    </div>

    <!-- Desktop Menu -->
    <ul class="hidden md:flex space-x-10">
      {navItems.map(item => (
        <li>
          <a href={item.href} class="text-white hover:text-accent transition relative after:content-[''] after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-accent after:transition-all hover:after:w-full">
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <!-- Desktop: Teléfono + Redes Sociales -->
    <div class="hidden md:flex items-center gap-8">
      <!-- Teléfono -->
      <span class="bg-white bg-opacity-20 text-white px-6 py-3 rounded-full flex items-center gap-2">
        <i class="fas fa-phone-alt"></i> +52 958 173 7977
      </span>

      <!-- Redes Sociales -->
      <div class="flex items-center gap-4 text-white">
        <a href={socialLinks.facebook} target="_blank" rel="noopener" class="hover:text-accent transition text-xl">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href={socialLinks.instagram} target="_blank" rel="noopener" class="hover:text-accent transition text-xl">
          <i class="fab fa-instagram"></i>
        </a>
        <a href={socialLinks.tiktok} target="_blank" rel="noopener" class="hover:text-accent transition text-xl">
          <i class="fab fa-tiktok"></i>
        </a>
        <a href={socialLinks.whatsapp} target="_blank" rel="noopener" class="hover:text-accent transition text-xl">
          <i class="fab fa-whatsapp"></i>
        </a>
      </div>
    </div>

    <!-- Mobile Toggle -->
    <button id="menuToggle" class="md:hidden text-white text-3xl">
      <i class="fas fa-bars"></i>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobileMenu" class="hidden md:hidden bg-primary">
    <ul class="py-6 text-center space-y-4">
      {navItems.map(item => (
        <li>
          <a href={item.href} class="text-white text-lg hover:text-accent block py-2">{item.label}</a>
        </li>
      ))}

      <!-- Separador -->
      <li class="border-t border-white/20 my-4"></li>

      <!-- Teléfono en móvil -->
      <li>
        <a href="tel:+529581737977" class="text-white flex items-center justify-center gap-3 py-3">
          <i class="fas fa-phone-alt"></i> +52 958 173 7977
        </a>
      </li>

      <!-- Redes sociales en móvil -->
      <li class="flex justify-center gap-8 py-4">
        <a href={socialLinks.facebook} target="_blank" rel="noopener" class="text-white hover:text-accent text-2xl">
          <i class="fab fa-facebook-f"></i>
        </a>
        <a href={socialLinks.instagram} target="_blank" rel="noopener" class="text-white hover:text-accent text-2xl">
          <i class="fab fa-instagram"></i>
        </a>
        <a href={socialLinks.tiktok} target="_blank" rel="noopener" class="text-white hover:text-accent text-2xl">
          <i class="fab fa-tiktok"></i>
        </a>
        <a href={socialLinks.whatsapp} target="_blank" rel="noopener" class="text-white hover:text-accent text-2xl">
          <i class="fab fa-whatsapp"></i>
        </a>
      </li>
    </ul>
  </div>
</nav>

<script>
  document.getElementById('menuToggle')?.addEventListener('click', () => {
    document.getElementById('mobileMenu')?.classList.toggle('hidden');
  });
</script>